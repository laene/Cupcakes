<h1>Cupcakes!</h1>

<h2>Cupcakes that are not devoured!</h2>

<ul>
    {{#each cupcakes}}
    {{#unless devoured}}
    {{!-- {{> cupcakes/cupcake-block devoured=true}} --}}
	{{cupcake_name}}

	<button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
		{{#if devoured}}SLEEP TIME!{{else}}WAKE UP!{{/if}}
	</button>
    {{/unless}}
    <li>
        {{name}}


    </li>
    {{/each}}
</ul>

<h2>Cupcakes that are devoured!</h2>

<ul>
    {{#each cupcakes}}
    {{#if devoured}}
    {{!-- {{> cupcakes/cupcake-block devoured=false}} --}}
	{{cupcake_name}}

	<button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
		{{#if devoured}}SLEEP TIME!{{else}}WAKE UP!{{/if}}
	</button>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Cupcake</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Cupcake Name:</label>
        <input type="text" id="ca" name="cupcake_name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> devoured!<br>
        <input type="radio" name="devoured" value="0"> not yet devoured!
    </div>

    <button type="submit">Add Cupcake</button>
</form>